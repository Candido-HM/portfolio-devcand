---
import Header from '../components/Header.astro';
// Supports weights 100-900 in a single small file.
import "@fontsource-variable/roboto-flex";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="w-full h-auto flex flex-col items-center">
		<div class="absolute top-0 z-[-2] h-screen w-full 
			bg-white bg-[radial-gradient(100%_50%_at_50%_0%,rgba(0,163,255,0.13)_0,rgba(0,163,255,0)_50%,rgba(0,163,255,0)_100%)]">
		</div>
		<slot /> 
	</body>
</html>
<style is:global>
	html {
		font-family: "Roboto Flex", sans-serif;
		/* background: #13151a; */
	}
</style>
