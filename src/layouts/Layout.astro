---
import { ViewTransitions } from "astro:transitions";
// Supports weights 100-900 in a single small file.
import "@fontsource-variable/roboto-flex";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body class="min-w-min lg:w-full h-auto flex flex-col items-center dark:bg-neutral-900">
		<div class="absolute top-0 z-[-2] min-h-screen min-w-min lg:w-full 
			bg-white dark:bg-neutral-900 bg-[radial-gradient(100%_50%_at_50%_0%,rgba(0,163,255,0.13)_0,rgba(0,163,255,0)_50%,rgba(0,163,255,0)_100%)]">
		</div>
		<slot /> 
	</body>
</html>
<style is:global>
	html {
		font-family: "Roboto Flex", sans-serif;
		/* scroll-behavior: smooth; */
		/* background: #13151a; */
	}
</style>  