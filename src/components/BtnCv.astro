<script>
    function downloadPDF() {
        const link = document.createElement('a');
        link.href = '/public/CV_Candido_Hernandez_Martin.pdf';
        link.download = 'CV_Candido_Hernandez_Martin.pdf';
        document.body.appendChild(link);
        link.click();
