---
import ThemeToggle from "./ThemeToggle.astro";
---
<header class="fixed top-0 z-10 w-full sm:w-3/4 max-w-screen-lg h-auto py-2">
    <nav class="w-auto h-12 my-3 flex items-center justify-evenly
         bg-zinc-50 border border-zinc-200 rounded-lg
         dark:bg-neutral-800 dark:border-neutral-700 dark:text-neutral-300 navbar">
        <div class="flex">
            <a href="#sobre-mi">
                <img class="w-12" src="/favicon.svg" alt="icon">
            </a>
        </div>
        <div class="flex">
            <a class="flex flex-row text-slate-700 dark:text-neutral-300 
                hover:text-blue-500 font-semibold" href="#sobre-mi">
                <img class="w-6 dark:invert" src="/icon-nav/home-nav.svg" alt="home">
                <span class="hidden sm:block ml-1">Sobre mí</span>
            </a>
        </div>
        <div class="flex">
            <a class="flex flex-row text-slate-700 dark:text-neutral-300 
                hover:text-blue-500 font-semibold" href="#experiencia">
                <img class="w-6 dark:invert" src="/icon-nav/business-nav.svg" alt="experiencia">
                <span class="hidden sm:block ml-1">Experiencia</span>
            </a>
        </div>
        <div class="flex">
            <a class="flex flex-row text-slate-700 dark:text-neutral-300 
                hover:text-blue-500 font-semibold" href="#formacion">
                <img class="w-6 dark:invert" src="/icon-nav/graduation-nav.svg" alt="formacion">
                <span class="hidden sm:block ml-1">Formación</span>
            </a>
        </div>
        <div class="flex">
            <a class="flex flex-row text-slate-700 dark:text-neutral-300 
                hover:text-blue-500 font-semibold" href="#contacto">
                <img class="w-6 dark:invert" src="/icon-nav/address-nav.svg" alt="contacto">
                <span class="hidden sm:block ml-1">Contacto</span>
            </a>
        </div>
        <ThemeToggle /> 
    </nav>
</header>

<style>
    nav > div:hover{
        img {
            filter: invert(0.4) sepia(1) hue-rotate(190deg) saturate(1000%);
        }
    }
    .nav > div > a.active {
        background-color: blueviolet;
    }
</style>
